      </textlist>

      <text name="systemInfo">
      <visible>false</visible>
      <pos>-0.065 0.845</pos>
      <size>1 0.25</size>
      <alignment>center</alignment>
      <backgroundColor>00000000</backgroundColor>
      <color>000000</color>
      <fontPath>./assets/BPreplayBold-unhinted.otf</fontPath>
      <fontSize>0.026</fontSize>
