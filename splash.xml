<theme>

   <formatVersion>7</formatVersion>

		<include>./theme.xml</include>

		<view name="splash">

      	<splash name="splash">
			
				<backgroundColor>ffffff</backgroundColor>

			</splash>

			<image name="background">

				<path>./assets/splash.png</path>

			</image>
 <image name="progressbar">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.7</pos>
