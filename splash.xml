      </image>
      <image name="progressbar:active">
         <color>ffffff</color>
         <colorEnd>ffffff</colorEnd>
      </image>
      <text name="label">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.8</pos>
         <alignment>center</alignment>
         <fontPath>./assets/BPreplayBold-unhinted.otf</fontPath>
         <fontSize>0.05</fontSize>
         <color>ffffff</color>
